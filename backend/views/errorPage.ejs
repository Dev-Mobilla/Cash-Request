<body style="background: linear-gradient(rgba(0, 0, 0, 0.568), rgba(0, 0, 0, 0.616)), url('https://upload.wikimedia.org/wikipedia/en/c/c0/M_Lhuillier_Cebu_Office_front_%28North_Reclamation_Area%2C_Cebu_City%3B_09-07-2022%29.jpg');background-attachment: fixed;background-repeat: no-repeat;background-size: cover;">
    <div class="container-fluid">
        <div class="mt-5">
          <div class="my-auto mx-auto text-center card pt-5 pb-4" style="max-width: 60%;">
                <div class="d-flex mt-2" style="justify-content: center;">
                    <img src="https://i.pinimg.com/originals/4a/ff/9d/4aff9db9936e04513fde6a461fa1ee4a.png" alt="" width="200">
                </div>
                <div class="mt-3 mb-3">
                    <h1 style="word-spacing: 5px;letter-spacing: 3px;"><%= messageHeader %></h1>
                    <br>
                    <p style="font-size: 20px;"><%= message %></p>
                    <br>
                    <p style="font-size: 18px;">Please contact your technician.</p>
                </div>
             </div>
        </div>
        <br>
      </div>
      <div class="mx-auto text-center mt-8">
        <p class="text-white" style="color:rgb(66 66 66);font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">M. LHUILLIER FINANCIAL SERVICES, INC.</p>
        <p class="text-white" style="color:rgb(66 66 66);font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;">Cash Request &copy; <%= year %></p>
      </div>
</body>
